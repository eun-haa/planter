<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jeh.mapper.MemberMapper">
	<!-- 1-1.회원가입 -->
	<insert id="postJoin">
		INSERT INTO member
		VALUES(#{mid},#{passwd},#{name},#{phone},
				#{email},#{postcode},#{address1},
				#{address2},#{address3},#{role})
	</insert>
	
	<!-- 1-2.아이디 중복체크 -->
    <select id="idCheck" parameterType="String" resultType="int">
        SELECT COUNT(mid) FROM member 
        WHERE mid= #{mid}
    </select>
    
    <!-- 1-3.이메일 중복체크 -->
    <select id="emailCheck" parameterType="String" resultType="int">
        SELECT COUNT(email) FROM member 
        WHERE email= #{email}
    </select>
    
    <!-- 2.로그인 설계 -->
    <select id="getLogin" resultType="com.jeh.domain.MemberDTO">
    	SELECT * FROM member
    	WHERE mid = #{mid}
    	AND passwd = #{passwd}
    </select>

    <select id="loginCheck" resultType="int">
        SELECT COUNT(*) FROM member 
        WHERE mid= #{mid}
        AND passwd = #{passwd}
    </select>
    
    <!-- 3.ID 찾기 -->
    <select id="postFindId" resultType="com.jeh.domain.MemberDTO">
		SELECT * FROM member
		WHERE email = #{email}
	</select>

	<select id="findIdCheck" resultType="int">
		SELECT COUNT(email) FROM member 
		WHERE email = #{email}
	</select>
	
	<!-- 4.PW 찾기 -->
	<select id="postFindPw" resultType="com.jeh.domain.MemberDTO">
		SELECT * FROM member
		WHERE email = #{email}
		AND mid = #{mid}
	</select>

	<select id="findPwCheck" resultType="int">
		SELECT COUNT(*) FROM member 
		WHERE email = #{email}
		AND mid = #{mid}
	</select>
	
	<!-- 비밀번호 변경 -->
	<update id="updatePw">
		UPDATE member 
		SET passwd = #{passwd} 
		WHERE email = #{email}
	</update>
    

    
</mapper>