<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jeh.mapper.BoardMapper">
	<!-- 1.글 쓰기 -->
	<insert id="write">
		INSERT INTO board(title, content, writer)
		VALUES(#{title}, #{content}, #{writer})
	</insert>
    
	<!-- 2.글 목록 -->
	<select id="list" resultType="com.jeh.domain.BoardDTO">
		SELECT * FROM board
	</select>
	
	<!-- 3.글 상세 -->
	<select id="detail" resultType="com.jeh.domain.BoardDTO">
		SELECT * FROM board
		WHERE bno=#{bno}
	</select>
    
    <!-- 4.글 수정 -->
    <update id="modify">
    	UPDATE board
    	SET title=#{title},
    		content=#{content},
    		regdate=now()
    	WHERE bno=#{bno}
    </update>
</mapper>